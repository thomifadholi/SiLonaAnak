<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text"
    tools:context=".DaftarActivity">

    <TextView
        android:id="@+id/login_title"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:textColor="#fff"
        android:text="Daftar Anak"
        android:fontFamily="@font/hangyaboly"
        android:textSize="32dp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingHorizontal="20dp"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/login_title"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <android.support.design.widget.TextInputLayout
                android:id="@+id/form_username"
                android:layout_toLeftOf="@+id/btnCekUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:textColorHint="@color/white"
                android:layout_marginTop="15dp">

                <EditText
                    android:id="@+id/input_username"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:hint="Nama Pengguna"
                    android:fontFamily="@font/hangyaboly"
                    android:textColor="@android:color/white"
                    android:textSize="22dp" />


            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/btnCekUsername"
                android:layout_marginLeft="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/hangyaboly"
                android:background="@drawable/btn_daftar_background"
                android:text="Cek"
                android:textColor="@color/text" />

        </RelativeLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/form_nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:textColorHint="@color/white"
            android:layout_marginTop="15dp">

            <EditText
                android:id="@+id/input_nama"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:hint="Nama Lengkap"
                android:fontFamily="@font/hangyaboly"
                android:textColor="@android:color/white"
                android:textSize="22dp" />


        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/form_email"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="0dp"
            android:textColorHint="@color/white">

            <EditText
                android:id="@+id/input_email"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:hint="Masukkan Email"
                android:fontFamily="@font/hangyaboly"
                android:textColor="@android:color/white"
                android:textSize="22dp" />


        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/form_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColorHint="@color/white"
            app:passwordToggleDrawable="@drawable/icon_selector"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/colorVisible"

            >

            <EditText
                android:id="@+id/input_password"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:hint="Kata Sandi"
                android:fontFamily="@font/hangyaboly"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:textSize="22dp"

                />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/btnDaftar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="-80dp"
            android:background="@drawable/btn_daftar_background"
            android:text="Daftar"
            android:textSize="18dp"
            android:fontFamily="@font/hangyaboly"
            android:textColor="@color/text" />


    </LinearLayout>



</RelativeLayout>